<form id="signup">
  <h3>Sign Up!</h3>
  <div class="form-group">
    <label for="username-submit">Username</label>
    <input type="text" class="form-control" id="username-submit" placeholder="Enter username">
  </div>
  <div class="form-group">
    <label for="password-submit">Password</label>
    <input type="password" class="form-control" id="password-submit" placeholder="Password">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
<a href="/login">Login</a>
<script src="/js/signup.js"></script>