{{#each posts}}
    <div class="card m-2">
        <div class="card-header">
            {{user.username}} posted on {{format_date date_created}}
        </div>
        <div class="card-body">
            <h5 class="card-title">{{title}}</h5>
            <p class="card-text">{{text}}</p>
        </div>
    </div>
{{/each}}